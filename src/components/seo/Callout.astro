---
interface Props {
	bg?: 'paper' | 'muted';
	kicker: string;
	title: string;
}

const { bg = 'muted', kicker, title } = Astro.props;

const bgClass = bg === 'muted' ? 'relative py-16 md:py-24 overflow-hidden' : 'bg-paper py-16 md:py-24';
const bgStyle = bg === 'muted' ? 'background-color: #eef2f6;' : undefined;
---

<section class={bgClass} style={bgStyle}>
	<div class="container relative z-10">
		<div class="max-w-3xl mx-auto">
			<div class="bg-paper border-2 border-accent/15 rounded-2xl p-8">
				<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">{kicker}</p>
				<h2 class="text-xl font-semibold mb-3 text-ink">{title}</h2>
				<slot />
			</div>
		</div>
	</div>
</section>
