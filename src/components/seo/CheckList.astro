---
interface Props {
	bg?: 'paper' | 'muted';
	kicker: string;
	title: string;
	subtitle?: string;
	items: string[];
}

const { bg = 'paper', kicker, title, subtitle, items } = Astro.props;

const bgClass = bg === 'muted' ? 'relative py-16 md:py-24 overflow-hidden' : 'bg-paper py-16 md:py-24';
const bgStyle = bg === 'muted' ? 'background-color: #eef2f6;' : undefined;
---

<section class={bgClass} style={bgStyle}>
	<div class="container">
		<div class="max-w-3xl mx-auto">
			<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">{kicker}</p>
			<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">{title}</h2>
			{subtitle && <p class="text-ink/70 mb-8" set:html={subtitle} />}
			<ul class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-ink/70">
				{items.map((item) => (
					<li class="flex items-start gap-3">
					<svg class="w-5 h-5 text-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
					</svg>
						<span>{item}</span>
					</li>
				))}
			</ul>
			<slot />
		</div>
	</div>
</section>
