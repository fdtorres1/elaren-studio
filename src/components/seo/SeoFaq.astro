---
interface FaqItem {
	q: string;
	a: string;
}

interface Props {
	faqs: FaqItem[];
	title?: string;
	subtitle?: string;
}

const {
	faqs,
	title = "Frequently asked questions",
	subtitle = "Straightforward answers. No fine print.",
} = Astro.props;

if (!faqs.length) return;
---

<section class="relative py-16 md:py-24 overflow-hidden" style="background-color: var(--clr-muted);">
	<div class="container relative z-10">
		<div class="max-w-3xl mx-auto">
			<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">FAQ</p>
			<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">{title}</h2>
			<p class="text-ink/70 mb-8">{subtitle}</p>
			<div class="space-y-3">
				{faqs.map((faq) => (
					<details class="bg-paper border-2 border-slate-200 rounded-xl shadow-sm group hover:border-slate-300 transition-colors">
						<summary class="cursor-pointer font-medium text-ink list-none p-5 pr-12 relative">
							{faq.q}
						<svg class="w-5 h-5 text-ink/40 absolute right-5 top-1/2 -translate-y-1/2 transition-transform duration-200 group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
						</svg>
						</summary>
						<div class="px-5 pb-5 -mt-2">
							<p class="text-sm text-ink/70 leading-relaxed">{faq.a}</p>
						</div>
					</details>
				))}
			</div>
		</div>
	</div>
</section>

<style>
	details summary::-webkit-details-marker { display: none; }
	details summary::marker { display: none; }
</style>
