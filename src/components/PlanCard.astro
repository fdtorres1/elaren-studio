---
interface Props {
	name: string;
	price: string;
	features: string[];
	popular?: boolean;
}

const { name, price, features, popular = false } = Astro.props;
---

<div class={`bg-paper border-2 rounded-xl p-8 h-full flex flex-col ${popular ? 'border-accent shadow-brand' : 'border-slate-100'}`}>
	{popular && (
		<div class="mb-4">
			<span class="inline-block px-3 py-1 bg-accent/10 text-accent text-xs font-semibold rounded-full">
				Most Popular
			</span>
		</div>
	)}
	<div class="flex-1">
		<h3 class="text-2xl font-semibold mb-2 text-ink">{name}</h3>
		<div class="mb-6">
			<span class="text-4xl font-bold text-ink">{price}</span>
			<span class="text-ink/60 ml-2">/month</span>
		</div>
		<ul class="space-y-3 mb-8">
			{features.map((feature) => (
				<li class="flex items-start text-sm text-ink/70">
					<svg class="w-5 h-5 text-accent mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
					</svg>
					<span>{feature}</span>
				</li>
			))}
		</ul>
	</div>
	<a
		href="/contact"
		class={`block text-center px-6 py-3 rounded-xl font-semibold no-underline transition-all duration-200 ${
			popular
				? 'bg-accent text-paper shadow-xl shadow-accent/40 hover:shadow-2xl hover:shadow-accent/50 hover:-translate-y-0.5'
				: 'bg-slate-50 text-ink border border-slate-100 hover:border-accent/30'
		}`}
	>
		Get Started
	</a>
</div>

