---
import { Fragment } from 'astro/jsx-runtime';

interface Props {
	title: string;
	description: string;
	features?: string[];
	price?: string;
	link?: string;
	linkText?: string;
	icon?: string;
}

const { title, description, features = [], price, link, linkText = "Learn more â†’", icon = "default" } = Astro.props;

const icons = {
	design: `<svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
		<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
	</svg>`,
	care: `<svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
		<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
	</svg>`,
	landing: `<svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
		<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
	</svg>`,
	default: `<svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
		<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
	</svg>`
};
---

<div class="bg-paper border-2 border-slate-200 rounded-xl p-8 shadow-md hover:shadow-xl hover:shadow-slate-900/10 hover:border-accent/30 hover:-translate-y-1 transition-all duration-300 h-full flex flex-col group">
	<div class="flex-1">
		<div class="w-14 h-14 bg-accent/10 rounded-xl flex items-center justify-center mb-5 group-hover:bg-accent/20 group-hover:scale-110 transition-all duration-300">
			<Fragment set:html={icons[icon as keyof typeof icons] || icons.default} />
		</div>
		<h3 class="text-h3 font-semibold mb-4 text-ink">{title}</h3>
		<p class="text-ink/70 mb-6 leading-relaxed">{description}</p>
		
		{features.length > 0 && (
			<ul class="space-y-2 mb-6">
				{features.map((feature) => (
					<li class="flex items-start text-sm text-ink/70">
						<svg class="w-5 h-5 text-accent mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
						</svg>
						<span>{feature}</span>
					</li>
				))}
			</ul>
		)}
		
		{price && (
			<p class="text-lg font-semibold text-ink mb-4">{price}</p>
		)}
	</div>
	
	{link && (
		<a
			href={link}
			class="text-accent font-medium hover:underline"
		>
			{linkText}
		</a>
	)}
</div>

