---
interface Props {
	kicker?: string;
	title: string;
	description?: string;
}

const { kicker, title, description } = Astro.props;
---

<div class="mb-12 md:mb-16">
	{kicker && (
		<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">{kicker}</p>
	)}
	<h2 class="text-h2 font-semibold mb-4 text-ink">{title}</h2>
	{description && (
		<p class="text-lg text-ink/70 max-w-2xl leading-relaxed">{description}</p>
	)}
</div>

