---
interface Props {
	title: string;
	summary: string;
	link?: string;
}

const { title, summary, link } = Astro.props;
---

<div
	class="block bg-paper border-2 border-slate-200 rounded-xl p-8 shadow-md hover:shadow-xl hover:shadow-slate-900/10 hover:border-accent/30 hover:-translate-y-1 transition-all duration-300 group relative overflow-hidden text-ink"
>
	<div class="absolute top-0 right-0 w-32 h-32 bg-accent/5 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2 opacity-0 group-hover:opacity-100 transition-opacity"></div>
	<div class="relative z-10">
		<h3 class="text-xl font-semibold mb-3">{title}</h3>
		<p class="leading-relaxed">{summary}</p>
	</div>
</div>

