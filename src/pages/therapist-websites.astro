	}

	const urlParams = new URLSearchParams(window.location.search);
	if (urlParams.get('success') === 'true') {
		if (status) {
			status.className = 'mt-4 p-4 bg-green-50 border border-green-200 rounded-xl text-green-800';
			status.innerHTML = '<strong>Thank you!</strong> We received your audit request and will send you practical recommendations within 2 business days.';
			status.classList.remove('hidden');
		}
		window.history.replaceState({}, document.title, window.location.pathname);
		document.getElementById('audit')?.scrollIntoView({ behavior: 'smooth' });
	}

	form?.addEventListener('submit', () => {
		const btn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
		if (btn) {
			btn.disabled = true;
			btn.textContent = 'Sending...';
		}
		status?.classList.add('hidden');
	});
