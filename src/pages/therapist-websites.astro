---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = "Websites for Therapists & Therapy Practices";
const description = "We design and build bright, enduring websites for therapists and group practices—fast, clean, and conversion-focused. Launched in ~10 days.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const INCLUDED = [
	{ title: 'Custom design + setup', desc: 'Tailored to your practice, not a generic template.' },
	{ title: 'Mobile optimization', desc: 'Looks and works beautifully on every device.' },
	{ title: 'Up to 5 core pages', desc: 'Home, About, Services, Contact, and one more of your choice.' },
	{ title: 'Basic SEO setup', desc: 'Title tags, meta descriptions, and local search basics.' },
	{ title: 'Analytics setup', desc: 'Know where your visitors come from and what they do.' },
	{ title: 'Hosting, security & backups', desc: 'SSL, uptime monitoring, and weekly backups included.' },
];

const PLANS = [
	{
		key: 'launch',
		name: 'Website Launch',
		price: '$500',
		period: 'one-time',
		tagline: 'Custom setup + design to get your site live quickly.',
		features: [
			'Custom design + build',
			'Up to 5 pages',
			'Mobile-optimized',
			'SEO + analytics setup',
			'2 rounds of revisions',
		],
		cta: 'Get Started',
		popular: false,
	},
	{
		key: 'starter',
		name: 'WaaS Starter',
		price: '$99',
		period: '/month',
		tagline: 'Hosting + maintenance essentials.',
		features: [
			'Premium hosting + SSL',
			'Weekly backups',
			'Uptime monitoring',
			'Security updates',
			'1 small edit request/month',
		],
		cta: 'Get Started',
		popular: false,
	},
	{
		key: 'care',
		name: 'WaaS Care+',
		price: '$199',
		period: '/month',
		tagline: 'Everything in Starter, plus hands-on care.',
		features: [
			'Everything in Starter',
			'Unlimited small edits (48-hr turnaround)',
			'Monthly conversion tune-up',
			'Monthly local SEO maintenance',
			'Google Business Profile update support',
			'Priority support',
			'Quarterly strategy check-in',
		],
		cta: 'Get Started',
		popular: true,
	},
];

const STEPS = [
	{
		num: '01',
		title: 'Discover',
		desc: 'We learn about your practice, your clients, and what makes your approach unique.',
	},
	{
		num: '02',
		title: 'Structure',
		desc: 'We map out the pages, content flow, and calls to action that make sense for your practice.',
	},
	{
		num: '03',
		title: 'Build',
		desc: 'We design and develop your site—mobile-first, fast, and conversion-focused.',
	},
	{
		num: '04',
		title: 'Launch',
		desc: 'Final review, your tweaks, domain connected, live to the world.',
	},
];

const FAQS = [
	{
		q: 'How fast can we launch?',
		a: 'Our target is ~10 days from the time we have your copy, assets, and access. Most delays come from content gathering, not our build process.',
	},
	{
		q: 'Do you work with solo and group practices?',
		a: 'Yes. We work with solo therapists, group practices, and multi-location clinics. The core build scales to fit your team size.',
	},
	{
		q: 'Can I upgrade from Starter to Care+ later?',
		a: 'Absolutely. You can upgrade anytime. It\'s a simple plan change—no rebuild required.',
	},
	{
		q: 'Who writes the copy for my website?',
		a: 'We prefer client-provided copy since you know your practice best. That said, we can help refine and structure what you provide, and copywriting support is available as an add-on if needed.',
	},
	{
		q: 'Do you provide HIPAA compliance?',
		a: 'We build websites, not medical software. We can guide you toward HIPAA-aware hosting and form handling best practices, but we do not provide legal compliance guarantees. For regulated workflows like patient intake or telehealth, we recommend working with a compliance specialist alongside our web build.',
	},
	{
		q: 'What happens if I need changes after launch?',
		a: 'If you\'re on Starter, you get 1 small edit per month. On Care+, you get unlimited small edits with 48-hour turnaround. Larger changes (new pages, redesigns) are scoped separately.',
	},
	{
		q: 'Do I own my website?',
		a: 'Yes. You own the design and content. Hosting and maintenance are part of the monthly plan, but the site itself is yours.',
	},
];

const structuredData = {
	"@context": "https://schema.org",
	"@type": "ProfessionalService",
	"name": "Elaren Studio – Therapist Websites",
	"description": description,
	"url": `https://elarenstudio.com/therapist-websites`,
	"provider": {
		"@type": "Organization",
		"name": "Elaren Studio",
		"url": "https://elarenstudio.com"
	},
	"serviceType": "Web Design",
	"areaServed": "US",
	"hasOfferCatalog": {
		"@type": "OfferCatalog",
		"name": "Therapist Website Plans",
		"itemListElement": [
			{
				"@type": "Offer",
				"name": "Website Launch",
				"price": "500",
				"priceCurrency": "USD",
				"description": "Custom website setup + design for therapy practices"
			},
			{
				"@type": "Offer",
				"name": "WaaS Starter",
				"price": "99",
				"priceCurrency": "USD",
				"priceSpecification": { "@type": "UnitPriceSpecification", "billingDuration": "P1M" },
				"description": "Hosting + maintenance essentials"
			},
			{
				"@type": "Offer",
				"name": "WaaS Care+",
				"price": "199",
				"priceCurrency": "USD",
				"priceSpecification": { "@type": "UnitPriceSpecification", "billingDuration": "P1M" },
				"description": "Full care plan with unlimited edits and SEO maintenance"
			}
		]
	}
};
---

<BaseLayout title={title} description={description}>
	<Header />
	<main>
		<!-- ════════════════════════════════════════════════════════════
			 1. HERO
			 ════════════════════════════════════════════════════════════ -->
		<section class="relative py-20 md:py-32 overflow-hidden" style="background: linear-gradient(to top, var(--clr-muted) 0%, var(--clr-slate-50) 50%, var(--clr-paper) 100%);">
			<div class="absolute top-0 right-0 w-96 h-96 bg-slate-200/30 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
			<div class="absolute bottom-0 left-0 w-96 h-96 bg-slate-300/40 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>

			<div class="container relative z-10">
				<div class="max-w-3xl">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-4">Therapist Websites</p>
					<h1 class="text-4xl md:text-5xl font-semibold mb-6 text-ink leading-tight">
						Websites for Therapy Practices That Build Trust and Book More Consults
					</h1>
					<p class="text-xl text-ink/80 mb-4 leading-relaxed max-w-2xl">
						We design and build bright, enduring websites for therapists and group practices—fast, clean, and conversion-focused.
					</p>
					<p class="text-sm font-medium text-ink/50 mb-10">
						Clear scope. No surprises. No long-term monthly contracts.
					</p>
					<div class="flex flex-wrap gap-4">
						<a
							href="#audit"
							class="inline-flex items-center justify-center px-8 py-4 bg-accent text-paper rounded-xl font-semibold no-underline shadow-xl shadow-accent/40 hover:shadow-2xl hover:shadow-accent/50 hover:-translate-y-0.5 transition-all duration-200 text-lg"
						>
							Get a Free 10-Minute Website Audit
						</a>
						<a
							href="#pricing"
							class="inline-flex items-center px-6 py-4 border-2 border-slate-200 text-ink rounded-xl font-semibold no-underline hover:border-accent/30 hover:bg-slate-50 transition-all duration-200 text-lg"
						>
							See Pricing
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- ════════════════════════════════════════════════════════════
			 2. CREDIBILITY / OUTCOMES
			 ════════════════════════════════════════════════════════════ -->
		<section class="bg-paper py-16 md:py-20">
			<div class="container">
				<div class="max-w-3xl mx-auto text-center mb-12">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">Why it matters</p>
					<h2 class="text-2xl md:text-3xl font-semibold text-ink">Your website is often the first impression a potential client has of your practice.</h2>
				</div>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
					<div class="text-center p-8 bg-paper rounded-xl border-2 border-slate-200 shadow-md hover:shadow-lg hover:border-accent/30 hover:-translate-y-1 transition-all duration-300 group">
						<div class="w-14 h-14 bg-accent/10 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:bg-accent/20 group-hover:scale-110 transition-all duration-300">
							<svg class="w-7 h-7 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
							</svg>
						</div>
						<h3 class="text-lg font-semibold text-ink mb-2">Build trust in 5 seconds</h3>
						<p class="text-sm text-ink/70">A clean, professional site tells visitors they're in the right place before they read a single word.</p>
					</div>
					<div class="text-center p-8 bg-paper rounded-xl border-2 border-slate-200 shadow-md hover:shadow-lg hover:border-accent/30 hover:-translate-y-1 transition-all duration-300 group">
						<div class="w-14 h-14 bg-accent/10 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:bg-accent/20 group-hover:scale-110 transition-all duration-300">
							<svg class="w-7 h-7 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
							</svg>
						</div>
						<h3 class="text-lg font-semibold text-ink mb-2">Make your services clear</h3>
						<p class="text-sm text-ink/70">Help visitors understand what you offer and whether you're the right fit—without confusion.</p>
					</div>
					<div class="text-center p-8 bg-paper rounded-xl border-2 border-slate-200 shadow-md hover:shadow-lg hover:border-accent/30 hover:-translate-y-1 transition-all duration-300 group">
						<div class="w-14 h-14 bg-accent/10 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:bg-accent/20 group-hover:scale-110 transition-all duration-300">
							<svg class="w-7 h-7 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
							</svg>
						</div>
						<h3 class="text-lg font-semibold text-ink mb-2">Increase consult inquiries</h3>
						<p class="text-sm text-ink/70">Better conversion flow means more of the right people actually reach out to schedule.</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Mid-page CTA -->
		<section class="bg-slate-200 py-10 md:py-12">
			<div class="container text-center">
				<p class="text-lg font-semibold text-ink mb-4">Not sure where your current site is falling short?</p>
				<a
					href="#audit"
					class="inline-flex items-center px-6 py-3 bg-accent text-paper rounded-xl font-semibold no-underline shadow-xl shadow-accent/40 hover:shadow-2xl hover:shadow-accent/50 hover:-translate-y-0.5 transition-all duration-200"
				>
					Get a Free 10-Minute Audit
				</a>
			</div>
		</section>

		<!-- ════════════════════════════════════════════════════════════
			 3. WHAT'S INCLUDED (CORE BUILD)
			 ════════════════════════════════════════════════════════════ -->
		<section class="relative py-16 md:py-24 overflow-hidden" style="background-color: var(--clr-muted);">
			<div class="absolute top-0 right-0 w-96 h-96 bg-slate-300/25 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none"></div>
			<div class="absolute bottom-0 left-0 w-80 h-80 bg-slate-300/20 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2 pointer-events-none"></div>

			<div class="container relative z-10">
				<div class="max-w-3xl mb-12">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">What's included</p>
					<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">Everything you need to launch a professional therapy practice website.</h2>
					<p class="text-ink/70">Clear scope. No surprises.</p>
				</div>

				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl">
					{INCLUDED.map((item) => (
						<div class="bg-paper border-2 border-slate-200 rounded-xl p-6 shadow-sm hover:shadow-md hover:border-accent/20 transition-all duration-200">
							<div class="flex items-start gap-3">
								<svg class="w-5 h-5 text-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								<div>
									<h3 class="font-semibold text-ink mb-1">{item.title}</h3>
									<p class="text-sm text-ink/60">{item.desc}</p>
								</div>
							</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- ════════════════════════════════════════════════════════════
			 4. PRICING
			 ════════════════════════════════════════════════════════════ -->
		<section id="pricing" class="container py-16 md:py-24">
			<div class="text-center mb-12">
				<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">Pricing</p>
				<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">Simple, transparent pricing</h2>
				<p class="text-ink/70 max-w-xl mx-auto">Two steps. No hidden fees.</p>
			</div>

			<!-- Step 1: Website Launch -->
			<div class="max-w-5xl mx-auto mb-10">
				<div class="flex items-center gap-3 mb-6">
					<span class="flex-shrink-0 w-8 h-8 bg-accent text-paper rounded-full flex items-center justify-center text-sm font-bold">1</span>
					<h3 class="text-lg font-semibold text-ink">Get your site built</h3>
				</div>
				<div class="bg-paper border-2 border-slate-200 rounded-2xl p-8 shadow-md max-w-2xl">
					<div class="flex flex-wrap items-baseline justify-between gap-4 mb-4">
						<div>
							<h4 class="text-xl font-semibold text-ink">Website Launch</h4>
							<p class="text-sm text-ink/60">Custom setup + design to get your site live quickly.</p>
						</div>
						<div class="text-right">
							<span class="text-4xl font-bold text-ink">$500</span>
							<span class="text-ink/60 ml-1">one-time</span>
						</div>
					</div>
					<ul class="grid grid-cols-1 sm:grid-cols-2 gap-2 text-sm text-ink/70">
						{PLANS[0].features.map((f) => (
							<li class="flex items-start">
								<svg class="w-5 h-5 text-accent mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								<span>{f}</span>
							</li>
						))}
					</ul>
				</div>
			</div>

			<!-- Step 2: Monthly Plans -->
			<div class="max-w-5xl mx-auto">
				<div class="flex items-center gap-3 mb-6">
					<span class="flex-shrink-0 w-8 h-8 bg-accent text-paper rounded-full flex items-center justify-center text-sm font-bold">2</span>
					<h3 class="text-lg font-semibold text-ink">Choose your monthly plan</h3>
				</div>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8 max-w-4xl">
					{PLANS.slice(1).map((plan) => (
						<div class={`relative flex flex-col bg-paper border-2 rounded-2xl p-8 shadow-md transition-all duration-300 ${
							plan.popular
								? 'border-accent shadow-xl ring-1 ring-accent/20'
								: 'border-slate-200 hover:shadow-xl hover:border-accent/30 hover:-translate-y-1'
						}`}>
							{plan.popular && (
								<div class="absolute -top-3.5 left-1/2 -translate-x-1/2">
									<span class="inline-block px-4 py-1.5 bg-accent text-paper text-xs font-bold uppercase tracking-wider rounded-full shadow-lg">
										Most Popular
									</span>
								</div>
							)}
							<div class={plan.popular ? 'mt-3' : ''}>
								<h4 class="text-xl font-semibold mb-1 text-ink">{plan.name}</h4>
								<p class="text-sm text-ink/60 mb-4">{plan.tagline}</p>
								<div class="mb-6 pb-6 border-b border-slate-100">
									<span class="text-4xl font-bold text-ink">{plan.price}</span>
									<span class="text-ink/60 ml-1">{plan.period}</span>
								</div>
								<ul class="flex-1 space-y-3 mb-8 text-sm text-ink/70">
									{plan.features.map((f) => (
										<li class="flex items-start">
											<svg class="w-5 h-5 text-accent mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
											</svg>
											<span>{f}</span>
										</li>
									))}
								</ul>
								<a
									href="#audit"
									class={`mt-auto block text-center px-6 py-3.5 rounded-xl font-semibold no-underline transition-all duration-200 ${
										plan.popular
											? 'bg-accent text-paper shadow-md shadow-accent/30 hover:shadow-xl hover:shadow-accent/50 hover:-translate-y-1'
											: 'bg-slate-50 text-ink border-2 border-slate-200 hover:border-accent/30 hover:bg-paper shadow-sm hover:shadow-md hover:-translate-y-0.5'
									}`}
								>
									{plan.cta}
								</a>
							</div>
						</div>
					))}
				</div>
			</div>
			<p class="text-sm text-ink/50 mt-8 text-center max-w-xl mx-auto">
				Care+ is +$100/mo from Starter. Upgrade or downgrade anytime—no contracts on monthly plans.
			</p>
		</section>

		<!-- ════════════════════════════════════════════════════════════
			 5. PROCESS
			 ════════════════════════════════════════════════════════════ -->
		<section class="relative py-16 md:py-24 overflow-hidden" style="background-color: var(--clr-muted);">
			<div class="absolute top-0 right-0 w-96 h-96 bg-slate-300/25 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none"></div>

			<div class="container relative z-10">
				<div class="max-w-3xl mb-12">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">Our process</p>
					<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">From first conversation to live site</h2>
					<p class="text-ink/70">A straightforward process designed to respect your time.</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-4 gap-6 max-w-5xl">
					{STEPS.map((step, i) => (
						<div class="relative bg-paper border-2 border-slate-200 rounded-2xl p-6 shadow-md hover:shadow-lg hover:border-accent/30 hover:-translate-y-1 transition-all duration-300">
							<span class="text-4xl font-bold text-accent/15 absolute top-4 right-5">{step.num}</span>
							<div class="relative z-10">
								<h3 class="text-lg font-semibold text-ink mb-2">{step.title}</h3>
								<p class="text-sm text-ink/70 leading-relaxed">{step.desc}</p>
							</div>
							{i < STEPS.length - 1 && (
								<div class="hidden md:block absolute top-1/2 -right-4 w-8 h-0.5 bg-slate-200"></div>
							)}
						</div>
					))}
				</div>

				<p class="text-sm text-ink/60 mt-8 max-w-3xl">
					<strong>Realistic timeline:</strong> ~10-day launch target once copy, assets, and access are provided. Most delays come from content gathering, not our build process.
				</p>
			</div>
		</section>

		<!-- ════════════════════════════════════════════════════════════
			 6. FAQ
			 ════════════════════════════════════════════════════════════ -->
		<section class="container py-16 md:py-24">
			<div class="max-w-3xl mx-auto">
				<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">FAQ</p>
				<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">Common questions</h2>
				<p class="text-ink/70 mb-8">Straightforward answers. No fine print.</p>

				<div class="space-y-3">
					{FAQS.map((faq) => (
						<details class="bg-paper border-2 border-slate-200 rounded-xl shadow-sm group hover:border-slate-300 transition-colors">
							<summary class="cursor-pointer font-medium text-ink list-none p-5 pr-12 relative">
								{faq.q}
								<svg class="w-5 h-5 text-ink/40 absolute right-5 top-1/2 -translate-y-1/2 transition-transform duration-200 group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
								</svg>
							</summary>
							<div class="px-5 pb-5 -mt-2">
								<p class="text-sm text-ink/70 leading-relaxed">{faq.a}</p>
							</div>
						</details>
					))}
				</div>
			</div>
		</section>

		<!-- ════════════════════════════════════════════════════════════
			 7. FINAL CTA
			 ════════════════════════════════════════════════════════════ -->
