---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PlanCard from '../components/PlanCard.astro';
import { readFile } from 'fs/promises';
import { parseMarkdown } from '../utils/markdown';

const content = await readFile('./elaren_site_content/plans.md', 'utf-8');
const { frontmatter } = parseMarkdown(content);
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
	<Header />
	<main>
		<!-- Hero -->
		<section class="container py-16 md:py-24">
			<div class="max-w-3xl">
				<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">Our plans</p>
				<h1 class="text-4xl md:text-5xl font-semibold mb-6 text-ink">Care Plans</h1>
				<p class="text-xl text-ink/80 leading-relaxed">
					Keep your site current without the chaos.
				</p>
			</div>
		</section>

		<!-- Plans Grid -->
		<section class="relative py-16 md:py-24 overflow-hidden" style="background-color: #eef2f6;">
			<!-- Decorative gradient elements -->
			<div class="absolute top-0 right-0 w-96 h-96 bg-slate-300/25 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none"></div>
			<div class="absolute bottom-0 left-0 w-80 h-80 bg-slate-300/20 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2 pointer-events-none"></div>
			<div class="absolute top-1/2 left-1/4 w-72 h-72 bg-slate-300/15 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2 pointer-events-none"></div>
			
			<div class="container relative z-10">
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
				<PlanCard
					name="Starter"
					price="$129"
					features={[
						"Hosting/CDN/SSL included",
						"1 small update per month",
						"Uptime monitoring",
						"Email support"
					]}
				/>
				<PlanCard
					name="Standard"
					price="$199"
					popular={true}
					features={[
						"Everything in Starter",
						"3 small updates per month",
						"Priority support",
						"2×/yr on-page SEO review",
						"Quarterly performance report"
					]}
				/>
				<PlanCard
					name="Plus"
					price="$349"
					features={[
						"Everything in Standard",
						"Quarterly landing page",
						"Monthly analytics email",
						"48-hour response guarantee (business hours)",
						"Dedicated support channel"
					]}
				/>
			</div>

			<div class="max-w-3xl mx-auto">
				<div class="bg-paper rounded-xl p-8 border-2 border-slate-200 shadow-md">
					<p class="text-sm text-ink/70 mb-4">
						<strong class="text-ink">Small update</strong> ≤ 30 minutes. Unused time doesn't carry over. Larger changes quoted as mini-projects.
					</p>
					<p class="text-sm text-ink/70">
						All plans include dependency security monitoring, Git-based versioning, and performance analytics.
					</p>
				</div>
			</div>
			</div>
		</section>

		<!-- CTA -->
		<section class="container py-16 md:py-24">
			<div class="max-w-3xl mx-auto text-center">
				<h2 class="text-2xl md:text-3xl font-semibold mb-4 text-ink">Questions about plans?</h2>
				<p class="text-lg text-ink/70 mb-8 leading-relaxed">
					Tell us about your needs and we'll help you find the right plan.
				</p>
				<a
					href="/contact"
					class="inline-flex items-center justify-center px-8 py-4 bg-accent text-paper rounded-xl font-semibold no-underline shadow-xl shadow-accent/40 hover:shadow-2xl hover:shadow-accent/50 hover:-translate-y-0.5 transition-all duration-200"
				>
					Get in touch with us
				</a>
			</div>
		</section>
	</main>
	<Footer />
</BaseLayout>
