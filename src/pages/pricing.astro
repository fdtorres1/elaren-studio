---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import TherapistCta from '../components/TherapistCta.astro';

// Format currency
const usd = (n: number) => n.toLocaleString('en-US', { style: 'currency', currency: 'USD', maximumFractionDigits: 0 });

// Website Builds
const BUILDS = [
	{
		key: 'home-services',
		title: 'Home Services',
		subtitle: 'HVAC, Plumbing, Roofing, Electrical',
		price: 9500,
		features: [
			'Strategy workshop + site plan',
			'Custom design & copywriting (up to 8 pages)',
			'Local SEO foundation',
			'Lead capture integration',
			'Basic tracking setup',
		],
	},
	{
		key: 'medical',
		title: 'Medical & Aesthetics',
		subtitle: 'Dental, Med-Spa, Private Practice',
		price: 12500,
		features: [
			'Everything in Home Services',
			'Before/after gallery system',
			'Patient intake workflows',
			'HIPAA-aware form handling',
		],
	},
];

// Care Plans (Keep it Running)
const CARE_PLANS = [
	{
		key: 'standard',
		title: 'Standard Care',
		price: 349,
		description: 'Keep the site running smoothly.',
		features: [
			'Hosting management',
			'SSL, backups, security updates',
			'Uptime monitoring',
			'Technical breakage repair',
		],
		ideal: 'Set it and forget it',
	},
	{
		key: 'plus',
		title: 'Care+',
		price: 549,
		description: 'Running smoothly + content flexibility.',
		features: [
			'Everything in Standard Care',
			'Unlimited text & image updates',
		],
		ideal: 'Teams needing frequent updates',
		hasGuardrails: true,
	},
];

// Growth Retainers (Grow Your Business)
const GROWTH_PLANS = [
	{
		key: 'foundation',
		title: 'Foundation',
		price: 1950,
		description: 'Steady visibility and a clean, maintained presence.',
		features: [
			'Google Business Profile management',
			'1 post/week + review response',
			'Monthly performance report',
		],
	},
	{
		key: 'accelerator',
		title: 'Accelerator',
		price: 3250,
		badge: 'Most Popular',
		description: 'Actively winning more of your local market.',
		features: [
			'Everything in Foundation',
			'2 SEO blog posts/month',
			'On-page SEO refinements',
			'Citation & listing management',
		],
	},
	{
		key: 'authority',
		title: 'Authority',
		price: 4750,
		description: 'Pushing hard for long-term market advantage.',
		features: [
			'Everything in Accelerator',
			'4 SEO blog posts/month',
			'Advanced outreach campaigns',
			'Quarterly strategy deep-dive',
		],
	},
];

// Add-ons
const ADDONS = [
	{ title: 'Google Business Profile', price: '$400/mo', note: 'Included in Growth retainers' },
	{ title: 'Analytics + Call Tracking', price: '$500/mo', note: 'Live dashboard + monthly video' },
	{ title: 'Sales Landing Page', price: '$1,250', note: 'Volume bundles available' },
	{ title: 'Standard Page', price: '$650', note: 'About, Team, FAQ, etc.' },
	{ title: 'SEO Blog Post', price: '$550', note: '~1,500 words, researched & formatted' },
];

// FAQs
const FAQS = [
	{
		question: 'Do you guarantee rankings, leads, or revenue?',
		answer: 'No. SEO and conversion work is measurable, but nobody can honestly promise specific outcomes. What we guarantee is clear scope, consistent execution, and transparent reporting.',
	},
	{
		question: 'Do I pay for Care on top of a Growth retainer?',
		answer: 'No. All Growth retainers include Standard Care (hosting, security, backups, monitoring, technical repair).',
	},
	{
		question: 'What\'s included in "unlimited text & image updates" (Care+)?',
		answer: 'Text and image swaps on existing pages. Queue-based (one active request at a time), 48 business-hour turnaround. Each request should take under 30 minutes. Excludes layout changes, new sections, new pages, or redesign work.',
	},
	{
		question: 'What counts as "technical breakage repair"?',
		answer: 'Things that aren\'t working correctly: form failures, errors, plugin conflicts, platform issues. This is different from content edits, which are intentional changes to words or images.',
	},
	{
		question: 'What are the payment terms for builds?',
		answer: '50% to start, 25% at design approval, 25% pre-launch.',
	},
	{
		question: 'What\'s the minimum commitment for Growth retainers?',
		answer: '6 months. SEO needs time to compound. Third-party tools and any ad spend are billed at cost if used.',
	},
	{
		question: 'Can I add a location to an existing site?',
		answer: 'Yes. Additional locations using the same design system are $3,500 each.',
	},
];
---

<BaseLayout title="Pricing" description="Websites that bring in customers, not just look pretty. Flat pricing for home services and medical practices.">
	<Header />
	<main>
		<!-- Sticky Section Nav -->
		<nav class="sticky top-0 z-20 border-b border-slate-200 bg-paper/90 backdrop-blur-sm">
			<div class="container flex items-center justify-between py-3">
				<div class="flex gap-6 text-sm">
					<a href="#builds" class="text-ink/60 hover:text-accent transition-colors font-medium">Builds</a>
					<a href="#monthly" class="text-ink/60 hover:text-accent transition-colors font-medium">Monthly</a>
					<a href="#addons" class="text-ink/60 hover:text-accent transition-colors font-medium">Add-ons</a>
					<a href="#faqs" class="text-ink/60 hover:text-accent transition-colors font-medium">FAQ</a>
				</div>
				<a
					href="/contact"
					class="inline-flex items-center px-4 py-1.5 bg-accent text-paper rounded-full text-sm font-semibold no-underline shadow-md shadow-accent/30 hover:shadow-lg hover:shadow-accent/40 hover:-translate-y-0.5 transition-all duration-200"
				>
					Get a proposal
				</a>
			</div>
		</nav>

		<!-- Hero -->
		<section class="container py-16 md:py-24">
			<div class="max-w-3xl">
				<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">Pricing</p>
				<h1 class="text-4xl md:text-5xl font-semibold mb-6 text-ink leading-tight">
					Websites that bring in customers, not just look pretty.
				</h1>
				<p class="text-xl text-ink/80 leading-relaxed mb-8">
					We build and manage sites for <strong>home services</strong> and <strong>dental / med-spa</strong> businesses. Everything is flat-priced. No mystery hours. If something falls outside scope, we'll tell you before doing it.
				</p>
				<div class="flex flex-wrap gap-4">
					<a
						href="#builds"
						class="inline-flex items-center px-6 py-3 bg-accent text-paper rounded-xl font-semibold no-underline shadow-xl shadow-accent/40 hover:shadow-2xl hover:shadow-accent/50 hover:-translate-y-0.5 transition-all duration-200"
					>
						See pricing
					</a>
					<a
						href="/contact"
						class="inline-flex items-center px-6 py-3 border-2 border-slate-200 text-ink rounded-xl font-semibold no-underline hover:border-accent/30 hover:bg-slate-50 transition-all duration-200"
					>
						Book a fit call
					</a>
				</div>
			</div>
		</section>

		<!-- Website Builds -->
		<section id="builds" class="relative py-16 md:py-24 overflow-hidden" style="background-color: #eef2f6;">
			<div class="absolute top-0 right-0 w-96 h-96 bg-slate-300/25 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none"></div>
			<div class="absolute bottom-0 left-0 w-80 h-80 bg-slate-300/20 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2 pointer-events-none"></div>
			
			<div class="container relative z-10">
				<div class="max-w-3xl mb-10">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">The Build</p>
					<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">Custom websites designed to convert</h2>
					<p class="text-ink/70">
						Strategy, design, copy, and local SEO foundation—all included. You own it on launch day.
					</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl">
					{BUILDS.map((b) => (
						<div class="flex flex-col bg-paper border-2 border-slate-200 rounded-2xl p-8 shadow-md hover:shadow-xl hover:border-accent/30 hover:-translate-y-1 transition-all duration-300">
							<p class="text-xs font-medium text-accent uppercase tracking-wider mb-1">{b.subtitle}</p>
							<h3 class="text-2xl font-semibold mb-4 text-ink">{b.title}</h3>
							<div class="mb-6 pb-6 border-b border-slate-100">
								<span class="text-4xl font-bold text-ink">{usd(b.price)}</span>
								<span class="text-sm text-ink/50 ml-2">one-time</span>
							</div>
							<ul class="flex-1 space-y-3 mb-8 text-sm text-ink/70">
								{b.features.map((f) => (
									<li class="flex items-start">
										<svg class="w-5 h-5 text-accent mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
										</svg>
										<span>{f}</span>
									</li>
								))}
							</ul>
							<a
								href="/contact"
								class="mt-auto block text-center px-6 py-3.5 bg-accent text-paper rounded-xl font-semibold no-underline shadow-md shadow-accent/30 hover:shadow-xl hover:shadow-accent/50 hover:-translate-y-1 transition-all duration-200"
							>
								Start this build
							</a>
						</div>
					))}
				</div>

				<p class="text-sm text-ink/60 mt-6 max-w-4xl">
					<strong>Terms:</strong> 50% deposit / 25% at design approval / 25% pre-launch. 
					<strong>Multi-location?</strong> +$3,500 per additional location (same design system).
				</p>
			</div>
		</section>

		<!-- Monthly Plans with Tab Toggle -->
		<section id="monthly" class="container py-16 md:py-24">
			<div class="max-w-5xl mx-auto">
				<div class="text-center mb-10">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">Monthly Plans</p>
					<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">Choose your path</h2>
				</div>

				<!-- Tab Toggle -->
				<div class="flex justify-center mb-10">
					<div class="inline-flex rounded-2xl bg-slate-100 p-1.5 shadow-inner" role="tablist">
						<button
							id="tab-care"
							role="tab"
							aria-selected="true"
							aria-controls="panel-care"
							class="tab-button px-8 py-3 rounded-xl text-sm font-semibold transition-all duration-200 bg-paper text-ink shadow-md"
						>
							<span class="flex items-center gap-2">
								<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
								</svg>
								Keep it Running
							</span>
						</button>
						<button
							id="tab-growth"
							role="tab"
							aria-selected="false"
							aria-controls="panel-growth"
							class="tab-button px-8 py-3 rounded-xl text-sm font-semibold transition-all duration-200 text-ink/60 hover:text-ink"
						>
							<span class="flex items-center gap-2">
								<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
								</svg>
								Grow Your Business
							</span>
						</button>
					</div>
				</div>

				<!-- Care Panel -->
				<div id="panel-care" role="tabpanel" aria-labelledby="tab-care" class="tab-panel">
					<p class="text-center text-ink/70 mb-8 max-w-2xl mx-auto">
						For sites that are already built. We keep them secure, fast, and running smoothly.
					</p>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-3xl mx-auto">
						{CARE_PLANS.map((p) => (
							<div class="flex flex-col bg-paper border-2 border-slate-200 rounded-2xl p-8 shadow-md hover:shadow-xl hover:border-accent/30 hover:-translate-y-1 transition-all duration-300">
								<div class="flex items-start justify-between mb-4">
									<div>
										<h3 class="text-xl font-semibold text-ink">{p.title}</h3>
										<p class="text-sm text-ink/60">{p.description}</p>
									</div>
								</div>
								<div class="mb-6 pb-6 border-b border-slate-100">
									<span class="text-4xl font-bold text-ink">{usd(p.price)}</span>
									<span class="text-ink/60 ml-1">/month</span>
								</div>
								<ul class="flex-1 space-y-3 mb-6 text-sm text-ink/70">
									{p.features.map((f) => (
										<li class="flex items-start">
											<svg class="w-5 h-5 text-accent mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
											</svg>
											<span>{f}</span>
										</li>
									))}
								</ul>
								<div class="mt-auto">
									{p.hasGuardrails && (
										<details class="mb-4 text-xs bg-slate-50 rounded-lg p-3 border border-slate-100">
											<summary class="cursor-pointer text-ink/60 hover:text-ink/80 font-medium flex items-center gap-1">
												<svg class="w-3 h-3 transition-transform details-chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
												</svg>
												Scope details
											</summary>
											<p class="mt-2 text-ink/60 text-xs leading-relaxed">
												Queue-based (one request at a time). 48 business-hour turnaround. Each request &lt;30 min. Excludes layout changes, new sections, new pages, redesign.
											</p>
										</details>
									)}
									<p class="text-xs text-ink/50 mb-4 flex items-center gap-1">
										<svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
										</svg>
										Ideal for: {p.ideal}
									</p>
									<a
										href="/contact"
										class="block text-center px-6 py-3 bg-slate-50 text-ink border-2 border-slate-200 rounded-xl font-semibold no-underline hover:border-accent/30 hover:bg-white shadow-sm hover:shadow-md hover:-translate-y-0.5 transition-all duration-200"
									>
										Get Started
									</a>
								</div>
							</div>
						))}
					</div>
				</div>

				<!-- Growth Panel -->
				<div id="panel-growth" role="tabpanel" aria-labelledby="tab-growth" class="tab-panel hidden">
					<p class="text-center text-ink/70 mb-8 max-w-2xl mx-auto">
						For businesses that want to actively win their local market. SEO, content, and visibility—handled.
					</p>
					<div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
						{GROWTH_PLANS.map((p) => (
							<div class={`relative flex flex-col bg-paper border-2 rounded-2xl p-8 shadow-md transition-all duration-300 ${
								p.badge 
									? 'border-accent shadow-xl md:-translate-y-3 ring-1 ring-accent/20' 
									: 'border-slate-200 hover:shadow-xl hover:border-accent/30 hover:-translate-y-1'
							}`}>
								{p.badge && (
									<div class="absolute -top-3.5 left-1/2 -translate-x-1/2">
										<span class="inline-block px-4 py-1.5 bg-accent text-paper text-xs font-bold uppercase tracking-wider rounded-full shadow-lg">
											{p.badge}
										</span>
									</div>
								)}
								<div class={p.badge ? 'mt-3' : ''}>
									<h3 class="text-xl font-semibold mb-1 text-ink">{p.title}</h3>
									<p class="text-sm text-ink/60 mb-4 min-h-[40px]">{p.description}</p>
									<div class="mb-6 pb-6 border-b border-slate-100">
										<span class="text-4xl font-bold text-ink">{usd(p.price)}</span>
										<span class="text-ink/60 ml-1">/month</span>
									</div>
									
									<div class="mb-5 py-2 px-3 bg-accent/5 rounded-lg border border-accent/20 flex items-center gap-2">
										<svg class="w-4 h-4 text-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
										</svg>
										<p class="text-xs font-medium text-accent">Includes Standard Care</p>
									</div>
									
									<ul class="flex-1 space-y-3 mb-8 text-sm text-ink/70">
										{p.features.map((f) => (
											<li class="flex items-start">
												<svg class="w-5 h-5 text-accent mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
												</svg>
												<span>{f}</span>
											</li>
										))}
									</ul>
									<a
										href="/contact"
										class={`mt-auto block text-center px-6 py-3 rounded-xl font-semibold no-underline transition-all duration-200 ${
											p.badge
												? 'bg-accent text-paper shadow-md shadow-accent/30 hover:shadow-xl hover:shadow-accent/50 hover:-translate-y-1'
												: 'bg-slate-50 text-ink border-2 border-slate-200 hover:border-accent/30 hover:bg-white shadow-sm hover:shadow-md hover:-translate-y-0.5'
										}`}
									>
										Get Started
									</a>
								</div>
							</div>
						))}
					</div>
					<p class="text-sm text-ink/50 mt-8 text-center">
						6-month minimum. Third-party tools and ad spend billed at cost if used.
					</p>
				</div>
			</div>
		</section>

		<!-- Add-ons -->
		<section id="addons" class="relative py-16 md:py-24 overflow-hidden" style="background-color: #eef2f6;">
			<div class="absolute top-0 right-0 w-96 h-96 bg-slate-300/25 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none"></div>
			
			<div class="container relative z-10">
				<div class="max-w-4xl mx-auto">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">Add-ons</p>
					<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">À la carte</h2>
					<p class="text-ink/70 mb-8">Need something specific? Add only what you need.</p>

					<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
						{ADDONS.map((a) => (
							<div class="bg-paper border-2 border-slate-200 rounded-xl p-5 shadow-sm hover:shadow-md hover:border-accent/20 transition-all duration-200">
								<div class="flex items-start justify-between gap-3 mb-2">
									<h4 class="text-base font-semibold text-ink leading-tight">{a.title}</h4>
									<span class="text-sm text-accent font-semibold whitespace-nowrap bg-accent/5 px-2 py-0.5 rounded-md">{a.price}</span>
								</div>
								<p class="text-xs text-ink/60">{a.note}</p>
							</div>
						))}
					</div>
					
					<p class="text-center text-sm text-ink/50 mt-8">
						Volume discounts available. <a href="/contact" class="text-accent hover:underline">Ask us</a> about bundles.
					</p>
				</div>
			</div>
		</section>

		<!-- FAQs -->
		<section id="faqs" class="container py-16 md:py-24">
			<div class="max-w-3xl mx-auto">
				<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">FAQ</p>
				<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">Common questions</h2>
				<p class="text-ink/70 mb-8">The fine print, plainly stated.</p>

				<div class="space-y-3">
					{FAQS.map((faq) => (
						<details class="bg-paper border-2 border-slate-200 rounded-xl shadow-sm group hover:border-slate-300 transition-colors">
							<summary class="cursor-pointer font-medium text-ink list-none p-5 pr-12 relative">
								{faq.question}
								<svg class="w-5 h-5 text-ink/40 absolute right-5 top-1/2 -translate-y-1/2 transition-transform duration-200 group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
								</svg>
							</summary>
							<div class="px-5 pb-5 -mt-2">
								<p class="text-sm text-ink/70 leading-relaxed">
									{faq.answer}
								</p>
							</div>
						</details>
					))}
				</div>
			</div>
		</section>

		<TherapistCta />

		<!-- Bottom CTA -->
		<section class="relative py-16 md:py-24 overflow-hidden" style="background-color: #eef2f6;">
			<div class="absolute top-0 left-1/4 w-96 h-96 bg-slate-300/20 rounded-full blur-3xl -translate-y-1/2 pointer-events-none"></div>
			
			<div class="container relative z-10">
				<div class="max-w-2xl mx-auto text-center">
					<h2 class="text-2xl md:text-3xl font-semibold mb-4 text-ink">Ready to talk?</h2>
					<p class="text-lg text-ink/70 mb-8 leading-relaxed">
						Book a quick fit call. If it's not a fit, we'll tell you quickly—no pressure.
					</p>
					<a
						href="/contact"
						class="inline-flex items-center px-8 py-4 bg-accent text-paper rounded-xl font-semibold no-underline shadow-xl shadow-accent/40 hover:shadow-2xl hover:shadow-accent/50 hover:-translate-y-0.5 transition-all duration-200"
					>
						Book a fit call
					</a>
				</div>
			</div>
		</section>
	</main>
	<Footer />
	
	<script>
		// Tab toggle functionality
		const tabCare = document.getElementById('tab-care');
		const tabGrowth = document.getElementById('tab-growth');
		const panelCare = document.getElementById('panel-care');
		const panelGrowth = document.getElementById('panel-growth');

		function switchTab(activeTab: 'care' | 'growth') {
			if (activeTab === 'care') {
				tabCare?.classList.add('bg-paper', 'text-ink', 'shadow-md');
				tabCare?.classList.remove('text-ink/60');
				tabCare?.setAttribute('aria-selected', 'true');
				
				tabGrowth?.classList.remove('bg-paper', 'text-ink', 'shadow-md');
				tabGrowth?.classList.add('text-ink/60');
				tabGrowth?.setAttribute('aria-selected', 'false');
				
				panelCare?.classList.remove('hidden');
				panelGrowth?.classList.add('hidden');
			} else {
				tabGrowth?.classList.add('bg-paper', 'text-ink', 'shadow-md');
				tabGrowth?.classList.remove('text-ink/60');
				tabGrowth?.setAttribute('aria-selected', 'true');
				
				tabCare?.classList.remove('bg-paper', 'text-ink', 'shadow-md');
				tabCare?.classList.add('text-ink/60');
				tabCare?.setAttribute('aria-selected', 'false');
				
				panelGrowth?.classList.remove('hidden');
				panelCare?.classList.add('hidden');
			}
		}

		tabCare?.addEventListener('click', () => switchTab('care'));
		tabGrowth?.addEventListener('click', () => switchTab('growth'));
	</script>
	
