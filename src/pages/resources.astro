---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import ResourceCard from "../components/ResourceCard.astro";
import { getAllResources, TYPE_LABELS } from "../lib/resources";

const resources = await getAllResources();

const activeTypes = [...new Set(resources.map((r) => r.data.type))];
---

<BaseLayout
	title="Resources"
	description="Guides, teardowns, and templates to keep your site bright and enduring."
>
	<Header />
	<main>
		<section class="container pt-16 md:pt-24 pb-8">
			<div class="max-w-3xl">
				<Breadcrumbs items={[{ label: "Home", href: "/" }, { label: "Resources" }]} />
				<h1 class="text-4xl md:text-5xl font-semibold mt-6 mb-4 text-ink">Resources</h1>
				<p class="text-lg text-ink/70 leading-relaxed mb-8">
					Guides, teardowns, and templates to keep your site bright and enduring.
				</p>

			<div class="flex flex-wrap gap-2" id="resource-filters" role="group" aria-label="Filter resources by type">
				<button
					data-filter="all"
					aria-pressed="true"
					class="filter-btn active px-4 py-2 text-sm font-medium rounded-lg border border-slate-200 transition-all"
				>
					All
				</button>
				{activeTypes.map((type) => (
					<button
						data-filter={type}
						aria-pressed="false"
						class="filter-btn px-4 py-2 text-sm font-medium rounded-lg border border-slate-200 transition-all"
					>
						{TYPE_LABELS[type]}s
					</button>
				))}
			</div>
			</div>
		</section>

		<section class="container pb-16 md:pb-24">
			<div class="max-w-3xl">
				<div class="flex flex-col gap-4" id="resource-list">
					{resources.map((resource) => (
						<div class="resource-item" data-type={resource.data.type}>
							<ResourceCard resource={resource} />
						</div>
					))}
				</div>
			</div>
		</section>

		<section class="container py-16 md:py-24 border-t border-slate-100">
			<div class="max-w-2xl mx-auto text-center">
				<h2 class="text-2xl md:text-3xl font-semibold mb-4 text-ink">Ready to work together?</h2>
				<p class="text-lg text-ink/70 mb-8 leading-relaxed">
					Tell us about your project and we'll help bring it to life.
				</p>
				<a
					href="/contact"
					class="inline-flex items-center justify-center px-8 py-4 bg-accent text-paper rounded-xl font-semibold no-underline shadow-xl shadow-accent/40 hover:shadow-2xl hover:shadow-accent/50 hover:-translate-y-0.5 transition-all duration-200"
				>
					Get in touch with us
				</a>
			</div>
		</section>
	</main>
	<Footer />
</BaseLayout>

<style>
	.filter-btn {
		color: var(--clr-ink);
		opacity: 0.6;
	}
	.filter-btn:hover {
		opacity: 0.8;
		border-color: var(--clr-accent);
	}
	.filter-btn.active {
		opacity: 1;
		background-color: var(--clr-accent);
		color: var(--clr-paper);
		border-color: var(--clr-accent);
	}
</style>

<script>
	const buttons = document.querySelectorAll<HTMLButtonElement>(".filter-btn");
	const items = document.querySelectorAll<HTMLElement>(".resource-item");

	const params = new URLSearchParams(window.location.search);
	const initialFilter = params.get("type") || "all";

	function activate(filter: string) {
		buttons.forEach((b) => {
			const isActive = b.dataset.filter === filter;
			b.classList.toggle("active", isActive);
			b.setAttribute("aria-pressed", String(isActive));
		});
		items.forEach((item) => {
			item.style.display =
				filter === "all" || item.dataset.type === filter ? "" : "none";
		});
	}

	activate(initialFilter);

	buttons.forEach((btn) => {
		btn.addEventListener("click", () => {
			const filter = btn.dataset.filter || "all";
			activate(filter);
			const url = new URL(window.location.href);
			if (filter === "all") {
				url.searchParams.delete("type");
			} else {
				url.searchParams.set("type", filter);
			}
			window.history.replaceState({}, "", url.toString());
		});
	});
</script>
