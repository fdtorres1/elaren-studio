---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = "Therapist Website Design in Dallas";
const description = "Custom therapist and counseling website design for Dallas private practices and group clinics. Launch in ~10 days with clear pricing: $500 setup + monthly care plans.";
const FAQS = [
	{
		q: 'How long does it take to launch a therapist website in Dallas?',
		a: 'Our typical target is ~10 days from the time we have your copy, images, and access. Most delays come from content gathering, not development.',
	},
	{
		q: 'Do you work with both solo therapists and group practices in Dallas?',
		a: 'Yes. We work with solo therapists, group practices, and multi-location clinics across the Dallas–Fort Worth area. The core build scales to fit your team size.',
	},
	{
		q: 'What does the $500 website launch fee include?',
		a: 'Custom design, up to 5 pages, mobile optimization, SEO foundations, analytics setup, and 2 rounds of revisions. You get a complete, conversion-ready site.',
	},
	{
		q: 'Can I update my site after launch without a developer?',
		a: 'With our Care+ plan ($199/month), we handle unlimited small edits for you with 48-hour turnaround. On Starter ($99/month), you get 1 edit per month. Either way, you never need to touch code.',
	},
	{
		q: 'Do you help with HIPAA compliance for therapist websites?',
		a: 'We can guide you toward HIPAA-aware hosting and form handling best practices, but we do not provide legal compliance guarantees. For regulated workflows, we recommend working with a compliance specialist alongside our web build.',
	},
];

const faqSchema = {
	"@context": "https://schema.org",
	"@type": "FAQPage",
	"mainEntity": FAQS.map((faq) => ({
		"@type": "Question",
		"name": faq.q,
		"acceptedAnswer": { "@type": "Answer", "text": faq.a }
	}))
};

const structuredData = {
	"@context": "https://schema.org",
	"@type": "ProfessionalService",
	"name": "Elaren Studio – Therapist Website Design Dallas",
	"description": description,
	"url": "https://elarenstudio.com/therapist-website-design-dallas",
	"provider": {
		"@type": "Organization",
		"name": "Elaren Studio",
		"url": "https://elarenstudio.com"
	},
	"serviceType": "Web Design",
	"areaServed": {
		"@type": "City",
		"name": "Dallas",
		"containedInPlace": { "@type": "State", "name": "Texas" }
	},
	"hasOfferCatalog": {
		"@type": "OfferCatalog",
		"name": "Therapist Website Plans",
		"itemListElement": [
			{ "@type": "Offer", "name": "Website Launch", "price": "500", "priceCurrency": "USD", "description": "Custom website setup + design for therapy practices" },
			{ "@type": "Offer", "name": "WaaS Starter", "price": "99", "priceCurrency": "USD", "priceSpecification": { "@type": "UnitPriceSpecification", "billingDuration": "P1M" }, "description": "Hosting + maintenance essentials" },
			{ "@type": "Offer", "name": "WaaS Care+", "price": "199", "priceCurrency": "USD", "priceSpecification": { "@type": "UnitPriceSpecification", "billingDuration": "P1M" }, "description": "Full care plan with unlimited edits and SEO maintenance" }
		]
	}
};
---

<BaseLayout title={title} description={description}>
	<Header />
	<main>
		<!-- Hero -->
		<section class="relative py-20 md:py-32 overflow-hidden" style="background: linear-gradient(to top, #eef2f6 0%, #f1f5f9 50%, #ffffff 100%);">
			<div class="absolute top-0 right-0 w-96 h-96 bg-slate-200/30 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
			<div class="absolute bottom-0 left-0 w-96 h-96 bg-slate-300/40 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>

			<div class="container relative z-10">
				<div class="max-w-3xl">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-4">Dallas Therapist Websites</p>
					<h1 class="text-4xl md:text-5xl font-semibold mb-6 text-ink leading-tight">
						Therapist Website Design in Dallas That Builds Trust and Books More Consults
					</h1>
					<p class="text-xl text-ink/80 mb-4 leading-relaxed max-w-2xl">
						Dallas practices need websites that feel trustworthy fast and make it easy for the right clients to take the next step. We build calm, conversion-focused therapist websites designed for real private-practice workflows—not generic templates.
					</p>
					<p class="text-sm font-medium text-ink/50 mb-10">
						Clear scope. No surprises. No long-term contracts.
					</p>
					<div class="flex flex-wrap gap-4">
						<a
							href="/therapist-websites#audit"
							class="inline-flex items-center justify-center px-8 py-4 bg-accent text-paper rounded-xl font-semibold no-underline shadow-xl shadow-accent/40 hover:shadow-2xl hover:shadow-accent/50 hover:-translate-y-0.5 transition-all duration-200 text-lg"
						>
							Get a Free 10-Minute Website Audit
						</a>
						<a
							href="#pricing"
							class="inline-flex items-center px-6 py-4 border-2 border-slate-200 text-ink rounded-xl font-semibold no-underline hover:border-accent/30 hover:bg-slate-50 transition-all duration-200 text-lg"
						>
							See Pricing
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Who this is for -->
		<section class="bg-paper py-16 md:py-24">
			<div class="container">
				<div class="max-w-3xl mx-auto">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">Who this is for</p>
					<h2 class="text-2xl md:text-3xl font-semibold mb-8 text-ink">Dallas therapy practices that need a better web presence</h2>
					<div class="space-y-6">
						<div class="flex items-start gap-4">
							<div class="flex-shrink-0 w-10 h-10 bg-accent/10 rounded-xl flex items-center justify-center mt-0.5">
								<svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
								</svg>
							</div>
							<div>
								<h3 class="font-semibold text-ink mb-1">Solo therapists</h3>
								<p class="text-ink/70">Launching or refreshing a private practice and need a site that reflects your approach and attracts the right clients.</p>
							</div>
						</div>
						<div class="flex items-start gap-4">
							<div class="flex-shrink-0 w-10 h-10 bg-accent/10 rounded-xl flex items-center justify-center mt-0.5">
								<svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
								</svg>
							</div>
							<div>
								<h3 class="font-semibold text-ink mb-1">Group practices</h3>
								<p class="text-ink/70">Need clearer service pages, provider bios, and a structure that scales as clinicians join.</p>
							</div>
						</div>
						<div class="flex items-start gap-4">
							<div class="flex-shrink-0 w-10 h-10 bg-accent/10 rounded-xl flex items-center justify-center mt-0.5">
								<svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
								</svg>
							</div>
							<div>
								<h3 class="font-semibold text-ink mb-1">Teams that want easy updates</h3>
								<p class="text-ink/70">You want a site you can keep current without relying on a developer every time something changes.</p>
							</div>
						</div>
						<div class="flex items-start gap-4">
							<div class="flex-shrink-0 w-10 h-10 bg-accent/10 rounded-xl flex items-center justify-center mt-0.5">
								<svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
								</svg>
							</div>
							<div>
								<h3 class="font-semibold text-ink mb-1">Practices expanding in the Dallas area</h3>
								<p class="text-ink/70">Opening a second location or adding providers and need a site structure that supports growth without a full redesign.</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- What makes a Dallas therapist site convert -->
		<section class="relative py-16 md:py-24 overflow-hidden" style="background-color: #eef2f6;">
			<div class="absolute top-0 right-0 w-96 h-96 bg-slate-300/25 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none"></div>
			<div class="container relative z-10">
				<div class="max-w-3xl mx-auto">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">What converts</p>
					<h2 class="text-2xl md:text-3xl font-semibold mb-8 text-ink">What makes a Dallas therapist website actually work</h2>
					<div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
						<div class="bg-paper rounded-xl border-2 border-slate-200 p-6 shadow-sm">
							<h3 class="font-semibold text-ink mb-2">Immediate trust signals</h3>
							<p class="text-sm text-ink/70">Clear specialty, credentials, and audience fit—visible before a visitor scrolls.</p>
						</div>
						<div class="bg-paper rounded-xl border-2 border-slate-200 p-6 shadow-sm">
							<h3 class="font-semibold text-ink mb-2">Friction-free contact path</h3>
							<p class="text-sm text-ink/70">Simple inquiry flow with a clear CTA, not a scavenger hunt for your phone number.</p>
						</div>
						<div class="bg-paper rounded-xl border-2 border-slate-200 p-6 shadow-sm">
							<h3 class="font-semibold text-ink mb-2">Mobile speed and clarity</h3>
							<p class="text-sm text-ink/70">Most prospects find you on their phone. The site needs to load fast and read easily at any size.</p>
						</div>
						<div class="bg-paper rounded-xl border-2 border-slate-200 p-6 shadow-sm">
							<h3 class="font-semibold text-ink mb-2">Local intent readiness</h3>
							<p class="text-sm text-ink/70">Location and service relevance structured so Dallas-area searches connect with your practice.</p>
						</div>
					</div>
					<p class="text-sm text-ink/60 mt-8">
						Not sure where your current site falls short? A <a href="/therapist-websites#audit" class="text-accent font-medium hover:underline">free 10-minute website audit</a> can help you find the gaps.
					</p>
				</div>
			</div>
		</section>

		<!-- What's included -->
		<section class="bg-paper py-16 md:py-24">
			<div class="container">
				<div class="max-w-3xl mx-auto">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">What's included</p>
					<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">Everything you need to launch</h2>
					<p class="text-ink/70 mb-8">Every build comes with a complete foundation—typically live in ~10 days once copy and assets are provided. See the full <a href="/therapist-websites" class="text-accent font-medium hover:underline">therapist website package</a> for details.</p>
					<ul class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-ink/70">
						{['Custom design + setup', 'Up to 5 pages', 'Mobile optimization', 'SEO foundations + analytics setup', 'Hosting, SSL, backups', 'Uptime monitoring'].map((item) => (
							<li class="flex items-start gap-3">
								<svg class="w-5 h-5 text-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								<span>{item}</span>
							</li>
						))}
					</ul>
				</div>
			</div>
		</section>

		<!-- Timeline -->
		<section class="relative py-16 md:py-24 overflow-hidden" style="background-color: #eef2f6;">
			<div class="container relative z-10">
				<div class="max-w-3xl mx-auto">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">Timeline</p>
					<h2 class="text-2xl md:text-3xl font-semibold mb-4 text-ink">Launch target: ~10 days</h2>
					<p class="text-ink/70 leading-relaxed mb-6">
						Once we have your copy, images, and access, our typical build takes about 10 days. Most delays come from content gathering, not development. We keep the process focused so you're not stuck in an open-ended project.
					</p>
					<div class="flex flex-wrap gap-3">
						{['Discover', 'Structure', 'Build', 'Launch'].map((step, i) => (
							<div class="flex items-center gap-2">
								<span class="w-7 h-7 bg-accent text-paper rounded-full flex items-center justify-center text-xs font-bold">{i + 1}</span>
								<span class="text-sm font-medium text-ink">{step}</span>
								{i < 3 && (
									<svg class="w-4 h-4 text-ink/30 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
									</svg>
								)}
							</div>
						))}
					</div>
				</div>
			</div>
		</section>

		<!-- Pricing -->
		<section id="pricing" class="bg-paper py-16 md:py-24">
			<div class="container">
				<div class="max-w-3xl mx-auto">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">Pricing</p>
					<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">Simple, transparent pricing</h2>
					<p class="text-ink/70 mb-8">
						<strong>How it works:</strong> one-time launch fee first, then choose the monthly support level that fits your practice. View full <a href="/pricing" class="text-accent font-medium hover:underline">pricing details</a>.
					</p>
					<div class="space-y-4">
						<div class="bg-paper rounded-xl border-2 border-slate-200 p-6 shadow-sm flex flex-wrap items-baseline justify-between gap-4">
							<div>
								<h3 class="font-semibold text-ink">Website Launch</h3>
								<p class="text-sm text-ink/60">Custom setup + design to get your site live quickly.</p>
							</div>
							<div class="text-right">
								<span class="text-2xl font-bold text-ink">$500</span>
								<span class="text-ink/60 ml-1">one-time</span>
							</div>
						</div>
						<div class="bg-paper rounded-xl border-2 border-slate-200 p-6 shadow-sm flex flex-wrap items-baseline justify-between gap-4">
							<div>
								<h3 class="font-semibold text-ink">WaaS Starter</h3>
								<p class="text-sm text-ink/60">Hosting + maintenance essentials.</p>
							</div>
							<div class="text-right">
								<span class="text-2xl font-bold text-ink">$99</span>
								<span class="text-ink/60 ml-1">/month</span>
							</div>
						</div>
						<div class="bg-paper rounded-xl border-2 border-accent/40 p-6 shadow-md ring-1 ring-accent/20 flex flex-wrap items-baseline justify-between gap-4">
							<div>
								<div class="flex items-center gap-2 mb-1">
									<h3 class="font-semibold text-ink">WaaS Care+</h3>
									<span class="text-xs font-bold text-accent bg-accent/10 px-2 py-0.5 rounded-full uppercase tracking-wider">Most Popular</span>
								</div>
								<p class="text-sm text-ink/60">Unlimited edits, monthly optimization, priority support.</p>
							</div>
							<div class="text-right">
								<span class="text-2xl font-bold text-ink">$199</span>
								<span class="text-ink/60 ml-1">/month</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Questions to ask any therapist web designer -->
		<section class="bg-paper py-16 md:py-24">
			<div class="container">
				<div class="max-w-3xl mx-auto">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">Evaluation checklist</p>
					<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">Questions to ask any therapist web designer in Dallas</h2>
					<p class="text-ink/70 mb-8">Whether you work with us or someone else, these are worth asking.</p>
					<ol class="space-y-5 text-ink/80">
						<li class="flex items-start gap-4">
							<span class="flex-shrink-0 w-8 h-8 bg-accent/10 rounded-full flex items-center justify-center text-sm font-bold text-accent">1</span>
							<span>Can clients understand who we help in under 10 seconds?</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="flex-shrink-0 w-8 h-8 bg-accent/10 rounded-full flex items-center justify-center text-sm font-bold text-accent">2</span>
							<span>Is the contact flow clear on mobile?</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="flex-shrink-0 w-8 h-8 bg-accent/10 rounded-full flex items-center justify-center text-sm font-bold text-accent">3</span>
							<span>Are provider bios and specialties easy to scan?</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="flex-shrink-0 w-8 h-8 bg-accent/10 rounded-full flex items-center justify-center text-sm font-bold text-accent">4</span>
							<span>Is there a plan to keep content current after launch?</span>
						</li>
					</ol>
				</div>
			</div>
		</section>

		<!-- FAQ -->
		<section class="relative py-16 md:py-24 overflow-hidden" style="background-color: #eef2f6;">
			<div class="container relative z-10">
				<div class="max-w-3xl mx-auto">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">FAQ</p>
					<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">Common questions about therapist website design in Dallas</h2>
					<p class="text-ink/70 mb-8">Straightforward answers. No fine print.</p>
					<div class="space-y-3">
						{FAQS.map((faq) => (
							<details class="bg-paper border-2 border-slate-200 rounded-xl shadow-sm group hover:border-slate-300 transition-colors">
								<summary class="cursor-pointer font-medium text-ink list-none p-5 pr-12 relative">
									{faq.q}
									<svg class="w-5 h-5 text-ink/40 absolute right-5 top-1/2 -translate-y-1/2 transition-transform duration-200 group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
									</svg>
								</summary>
								<div class="px-5 pb-5 -mt-2">
									<p class="text-sm text-ink/70 leading-relaxed">{faq.a}</p>
								</div>
							</details>
						))}
					</div>
				</div>
			</div>
		</section>

		<!-- DFW cross-link -->
		<section class="relative py-16 md:py-24 overflow-hidden" style="background-color: #eef2f6;">
			<div class="container relative z-10">
				<div class="max-w-3xl mx-auto">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">Serving the DFW Metroplex</p>
					<h2 class="text-2xl md:text-3xl font-semibold mb-4 text-ink">We also work with practices across DFW</h2>
					<p class="text-ink/70 leading-relaxed">
						Our therapist website work isn't limited to Dallas. We serve practices across the metroplex, including <a href="/therapist-website-design-fort-worth" class="text-accent font-medium hover:underline">Fort Worth</a> and surrounding areas. If you're a <a href="/group-practice-website-design" class="text-accent font-medium hover:underline">group practice</a> with multiple locations, we build sites that scale across providers and offices.
					</p>
				</div>
			</div>
		</section>

		<!-- Final CTA -->
		<section class="relative py-16 md:py-24 overflow-hidden bg-paper">
			<div class="absolute top-0 left-1/4 w-96 h-96 bg-slate-300/20 rounded-full blur-3xl -translate-y-1/2 pointer-events-none"></div>
			<div class="container relative z-10">
				<div class="max-w-2xl mx-auto text-center">
					<h2 class="text-2xl md:text-3xl font-semibold mb-4 text-ink">Ready for a cleaner, higher-converting therapy website in Dallas?</h2>
					<p class="text-lg text-ink/70 mb-8 leading-relaxed">
						Get a practical, no-strings <a href="/therapist-websites#audit" class="text-accent font-medium hover:underline">free 10-minute website audit</a> with recommendations you can use immediately.
					</p>
					<div class="flex flex-col sm:flex-row items-center justify-center gap-4">
						<a
							href="/therapist-websites#audit"
							class="inline-flex items-center px-8 py-4 bg-accent text-paper rounded-xl font-semibold no-underline shadow-xl shadow-accent/40 hover:shadow-2xl hover:shadow-accent/50 hover:-translate-y-0.5 transition-all duration-200 text-lg"
						>
							Get a Free 10-Minute Website Audit
						</a>
						<a
							href="/contact"
							class="inline-flex items-center px-6 py-4 border-2 border-slate-200 text-ink rounded-xl font-semibold no-underline hover:border-accent/30 hover:bg-slate-50 transition-all duration-200"
						>
							Prefer to talk? Book a 15-min call
						</a>
					</div>
				</div>
			</div>
		</section>
	</main>
	<Footer />

	<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
	<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
</BaseLayout>

<style>
	details summary::-webkit-details-marker { display: none; }
	details summary::marker { display: none; }
</style>
