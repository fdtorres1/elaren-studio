---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SectionHeading from '../components/SectionHeading.astro';
import { readFile } from 'fs/promises';
import { parseMarkdown } from '../utils/markdown';
import { markdownToHtml } from '../utils/markdownToHtml';

const content = await readFile('./elaren_site_content/about.md', 'utf-8');
const { frontmatter, body } = parseMarkdown(content);
// Remove Team section from content
const teamIndex = body.indexOf('## Team');
const mainContent = teamIndex > -1 ? body.substring(0, teamIndex).trim() : body;
const htmlContent = markdownToHtml(mainContent);
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
	<Header />
	<main>
		<!-- Hero -->
		<section class="container pt-16 md:pt-24 pb-4 md:pb-6">
			<div class="max-w-3xl">
				<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">About</p>
				<h1 class="text-4xl md:text-5xl font-semibold mb-6 text-ink">Structure illuminated.</h1>
				<p class="text-xl text-ink/80 leading-relaxed">
					Elaren Studio was founded on a simple idea: websites should be as clear and enduring as the work they represent.
				</p>
			</div>
		</section>

		<!-- Main Content -->
		<section class="container py-8 md:py-12">
			<div class="max-w-3xl">
				<div class="prose prose-lg" set:html={htmlContent} />
			</div>
		</section>

		<!-- Values Section -->
		<section class="relative py-16 md:py-24 overflow-hidden" style="background-color: var(--clr-muted);">
			<!-- Decorative gradient elements -->
			<div class="absolute top-0 right-0 w-96 h-96 bg-slate-300/25 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none"></div>
			<div class="absolute bottom-0 left-0 w-80 h-80 bg-slate-300/20 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2 pointer-events-none"></div>
			<div class="absolute top-1/2 left-1/4 w-72 h-72 bg-slate-300/15 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2 pointer-events-none"></div>
			
			<div class="container relative z-10">
			<SectionHeading
				kicker="Our values"
				title="Clarity · Endurance · Care · Respect"
			/>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
				<div class="bg-paper rounded-xl p-8 border-2 border-slate-200 shadow-md hover:shadow-xl hover:shadow-slate-900/10 hover:border-accent/30 hover:-translate-y-1 transition-all duration-300">
					<h3 class="text-xl font-semibold mb-3 text-ink">Clarity by design</h3>
					<p class="text-ink/70 leading-relaxed">
						Simple layouts, typographic hierarchy, lean components. We strip away complexity to reveal what matters.
					</p>
				</div>
				<div class="bg-paper rounded-xl p-8 border-2 border-slate-200 shadow-md hover:shadow-xl hover:shadow-slate-900/10 hover:border-accent/30 hover:-translate-y-1 transition-all duration-300">
					<h3 class="text-xl font-semibold mb-3 text-ink">Built to endure</h3>
					<p class="text-ink/70 leading-relaxed">
						Static stack, global CDN, minimal dependencies. Your site stays fast and reliable for years, not months.
					</p>
				</div>
				<div class="bg-paper rounded-xl p-8 border-2 border-slate-200 shadow-md hover:shadow-xl hover:shadow-slate-900/10 hover:border-accent/30 hover:-translate-y-1 transition-all duration-300">
					<h3 class="text-xl font-semibold mb-3 text-ink">Care that scales</h3>
					<p class="text-ink/70 leading-relaxed">
						Lightweight monthly updates, proactive checks, usage alerts. We handle the details so you don't have to.
					</p>
				</div>
				<div class="bg-paper rounded-xl p-8 border-2 border-slate-200 shadow-md hover:shadow-xl hover:shadow-slate-900/10 hover:border-accent/30 hover:-translate-y-1 transition-all duration-300">
					<h3 class="text-xl font-semibold mb-3 text-ink">Respect for your time</h3>
					<p class="text-ink/70 leading-relaxed">
						No unnecessary meetings, no jargon, no surprises. Just clear communication and steady progress.
					</p>
				</div>
			</div>
			</div>
		</section>

		<!-- CTA -->
		<section class="container py-16 md:py-24">
			<div class="max-w-3xl mx-auto text-center">
				<h2 class="text-2xl md:text-3xl font-semibold mb-4 text-ink">Ready to work together?</h2>
				<p class="text-lg text-ink/70 mb-8 leading-relaxed">
					Tell us about your project and we'll help bring it to life.
				</p>
				<a
					href="/contact"
					class="inline-flex items-center justify-center px-8 py-4 bg-accent text-paper rounded-xl font-semibold no-underline shadow-xl shadow-accent/40 hover:shadow-2xl hover:shadow-accent/50 hover:-translate-y-0.5 transition-all duration-200"
				>
					Get in touch with us
				</a>
			</div>
		</section>
	</main>
	<Footer />
</BaseLayout>
