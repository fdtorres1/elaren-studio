---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = "Local SEO Care for Home Services";
const description = "Turn local search into qualified calls and form leads. Elaren Studio's Local SEO Care includes setup, Google Business Profile optimization, local pages, citations, and monthly growth support.";

const FOCUS_AREAS = [
	{ title: 'Local visibility', desc: 'Show up in the markets you actually serve — Google Maps, local pack, organic.' },
	{ title: 'Better conversion', desc: 'Turn page views into calls and form submissions on key landing pages.' },
	{ title: 'Cleaner local signals', desc: 'Citations, content relevance, and review flow that reinforce your authority.' },
	{ title: 'Measurable KPI trends', desc: 'Track qualified calls, form leads, and GBP actions month over month.' },
];

const SETUP_FEATURES = [
	'Google Business Profile audit + optimization',
	'Local keyword map',
	'Tracking baseline (calls, forms, key events)',
	'On-site implementation (1 page refresh included)',
	'Citation cleanup (up to 25 updates)',
];

const TIERS = [
	{
		name: 'Maintenance',
		tier: 'Tier A',
		price: '$850–$1,000',
		period: '/mo',
		tagline: 'Keep your local SEO foundation healthy.',
		features: [
			'GBP updates + hygiene',
			'Citation monitoring',
			'1 minor on-page refresh/mo',
			'Monthly async report + next actions',
		],
		popular: false,
	},
	{
		name: 'Growth',
		tier: 'Tier B',
		price: '$1,200–$1,500',
		period: '/mo',
		tagline: 'Expand visibility and convert more leads.',
		features: [
			'Everything in Maintenance',
			'1 new local page + 1 refresh/mo',
			'Review/reputation workflow',
			'CTA/form conversion tune-ups',
			'Quarterly competitor snapshot',
		],
		popular: true,
	},
	{
		name: 'Authority',
		tier: 'Tier C',
		price: '$1,800–$2,200',
		period: '/mo',
		tagline: 'Dominate your local market.',
		features: [
			'Everything in Growth',
			'2 new local pages + 2 refreshes/mo',
			'Higher-frequency GBP optimization',
			'Monthly call/script conversion tuning session',
		],
		popular: false,
	},
];

const OUTCOMES = [
	{ label: 'Qualified calls', primary: true },
	{ label: 'Qualified form leads', primary: true },
	{ label: 'Conversion rate on key pages', primary: true },
	{ label: 'GBP actions (calls, website clicks, directions)', primary: true },
	{ label: 'Local keyword movement', primary: false },
	{ label: 'Review velocity and average rating', primary: false },
];

const SCOPE_ITEMS = [
	{ term: 'Refresh', def: 'Existing page only — up to ~400 words edited, on-page updates + internal links + metadata check.' },
	{ term: 'New local page', def: 'Net-new strategy + copy + on-page SEO + internal links + publish QA.' },
	{ term: 'Citation cleanup', def: 'Setup sprint includes up to 25 updates.' },
	{ term: 'Revisions', def: 'Up to 2 rounds per deliverable.' },
	{ term: 'Out-of-scope work', def: 'Handled via change order or ad-hoc billing.' },
];

const FAQS = [
	{
		q: 'How long before I see results?',
		a: 'Local SEO compounds over time. Most clients see measurable movement in GBP actions and local keyword positions within 60–90 days of setup completion. Consistent monthly care accelerates the curve.',
	},
	{
		q: 'Do I need to already have a website?',
		a: 'Yes. This service optimizes an existing website and Google Business Profile. If you need a site built first, see our web design services — we can bundle both.',
	},
	{
		q: 'What access do you need from me?',
		a: 'Google Business Profile ownership or manager access, Google Analytics and Search Console access, and website CMS access. We\'ll walk you through it during onboarding.',
	},
	{
		q: 'Can I switch tiers later?',
		a: 'Yes. You can move up or down between monthly tiers at any time. Most clients start with Maintenance or Growth and adjust based on results and growth goals.',
	},
	{
		q: 'Do you guarantee rankings?',
		a: 'No. Nobody can honestly guarantee specific rankings. What we guarantee is clear scope, consistent execution, and transparent reporting tied to business outcomes — not vanity metrics.',
	},
	{
		q: 'What\'s the minimum commitment?',
		a: 'The setup sprint is required and billed once. Monthly care has a three-month minimum to allow enough time for local SEO signals to compound. After that, month-to-month.',
	},
];

const structuredData = {
	"@context": "https://schema.org",
	"@type": "ProfessionalService",
	"name": "Elaren Studio – Local SEO Care",
	"description": description,
	"url": "https://elarenstudio.com/local-seo",
	"provider": {
		"@type": "Organization",
		"name": "Elaren Studio",
		"url": "https://elarenstudio.com"
	},
	"serviceType": "Local SEO",
	"areaServed": "US",
	"hasOfferCatalog": {
		"@type": "OfferCatalog",
		"name": "Local SEO Care Plans",
		"itemListElement": [
			{
				"@type": "Offer",
				"name": "Setup Sprint",
				"price": "1800",
				"priceCurrency": "USD",
				"description": "One-time local SEO foundation build: GBP optimization, keyword map, tracking, citations"
			},
			{
				"@type": "Offer",
				"name": "Maintenance (Tier A)",
				"price": "850",
				"priceCurrency": "USD",
				"priceSpecification": { "@type": "UnitPriceSpecification", "billingDuration": "P1M" },
				"description": "GBP hygiene, citation monitoring, 1 on-page refresh/mo, monthly report"
			},
			{
				"@type": "Offer",
				"name": "Growth (Tier B)",
				"price": "1200",
				"priceCurrency": "USD",
				"priceSpecification": { "@type": "UnitPriceSpecification", "billingDuration": "P1M" },
				"description": "Local page creation, review workflow, conversion tune-ups, competitor analysis"
			},
			{
				"@type": "Offer",
				"name": "Authority (Tier C)",
				"price": "1800",
				"priceCurrency": "USD",
				"priceSpecification": { "@type": "UnitPriceSpecification", "billingDuration": "P1M" },
				"description": "Maximum local page velocity, high-frequency GBP optimization, conversion coaching"
			}
		]
	}
};
---

<BaseLayout title={title} description={description}>
	<Header />
	<main>
		<!-- HERO -->
		<section class="relative py-20 md:py-32 overflow-hidden" style="background: linear-gradient(to top, var(--clr-muted) 0%, var(--clr-slate-50) 50%, var(--clr-paper) 100%);">
			<div class="absolute top-0 right-0 w-96 h-96 bg-slate-200/30 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
			<div class="absolute bottom-0 left-0 w-96 h-96 bg-slate-300/40 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>

			<div class="container relative z-10">
				<div class="max-w-3xl">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-4">Local SEO Care</p>
					<h1 class="text-4xl md:text-5xl font-semibold mb-6 text-ink leading-tight">
						Local SEO Care That Turns Search Into Calls
					</h1>
					<p class="text-xl text-ink/80 mb-4 leading-relaxed max-w-2xl">
						We help home service businesses show up locally and convert that visibility into qualified calls and form submissions — not vanity traffic.
					</p>
					<p class="text-sm font-medium text-ink/50 mb-10">
						Structured execution. Transparent reporting. No ranking guarantees — just measurable work.
					</p>
					<div class="flex flex-wrap gap-4">
						<a
							href="#contact"
							class="inline-flex items-center justify-center px-8 py-4 bg-accent text-paper rounded-xl font-semibold no-underline shadow-xl shadow-accent/40 hover:shadow-2xl hover:shadow-accent/50 hover:-translate-y-0.5 transition-all duration-200 text-lg"
						>
							Book a Local SEO Fit Call
						</a>
						<a
							href="#pricing"
							class="inline-flex items-center px-6 py-4 border-2 border-slate-200 text-ink rounded-xl font-semibold no-underline hover:border-accent/30 hover:bg-slate-50 transition-all duration-200 text-lg"
						>
							See Plans
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- WHAT THIS SERVICE IS BUILT TO DO -->
		<section class="bg-paper py-16 md:py-20">
			<div class="container">
				<div class="max-w-3xl mx-auto text-center mb-12">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">What this service is built to do</p>
					<h2 class="text-2xl md:text-3xl font-semibold text-ink">If your business depends on local customers, your website and Google Business Profile should work together to generate steady lead flow.</h2>
				</div>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-5xl mx-auto">
					{FOCUS_AREAS.map((item) => (
						<div class="text-center p-8 bg-paper rounded-xl border-2 border-slate-200 shadow-md hover:shadow-lg hover:border-accent/30 hover:-translate-y-1 transition-all duration-300 group">
							<div class="w-14 h-14 bg-accent/10 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:bg-accent/20 group-hover:scale-110 transition-all duration-300">
								<svg class="w-7 h-7 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
							</div>
							<h3 class="text-lg font-semibold text-ink mb-2">{item.title}</h3>
							<p class="text-sm text-ink/70">{item.desc}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- WHO THIS IS FOR -->
		<section class="relative py-16 md:py-24 overflow-hidden" style="background-color: var(--clr-muted);">
			<div class="absolute top-0 right-0 w-96 h-96 bg-slate-300/25 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none"></div>

			<div class="container relative z-10">
				<div class="max-w-3xl mb-12">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">Who this is for</p>
					<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">Built for local service businesses ready for structured, ongoing execution.</h2>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl">
					<div class="bg-paper border-2 border-slate-200 rounded-xl p-8 shadow-md">
						<h3 class="text-lg font-semibold text-ink mb-4 flex items-center gap-2">
							<svg class="w-6 h-6 text-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
							</svg>
							Best fit
						</h3>
						<ul class="space-y-3 text-sm text-ink/70">
							<li class="flex items-start gap-2">
								<span class="text-accent mt-1 flex-shrink-0">&bull;</span>
								Home service businesses (cleaning, landscaping, painting, handyman, etc.)
							</li>
							<li class="flex items-start gap-2">
								<span class="text-accent mt-1 flex-shrink-0">&bull;</span>
								1–3 locations
							</li>
							<li class="flex items-start gap-2">
								<span class="text-accent mt-1 flex-shrink-0">&bull;</span>
								Existing website + Google Business Profile
							</li>
							<li class="flex items-start gap-2">
								<span class="text-accent mt-1 flex-shrink-0">&bull;</span>
								Owners who want structured, ongoing execution
							</li>
						</ul>
					</div>

					<div class="bg-paper border-2 border-slate-200 rounded-xl p-8 shadow-md">
						<h3 class="text-lg font-semibold text-ink mb-4 flex items-center gap-2">
							<svg class="w-6 h-6 text-ink/40 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
							</svg>
							Not a fit
						</h3>
						<ul class="space-y-3 text-sm text-ink/70">
							<li class="flex items-start gap-2">
								<span class="text-ink/30 mt-1 flex-shrink-0">&bull;</span>
								"Rank me by next week" expectations
							</li>
							<li class="flex items-start gap-2">
								<span class="text-ink/30 mt-1 flex-shrink-0">&bull;</span>
								National SEO campaigns
							</li>
							<li class="flex items-start gap-2">
								<span class="text-ink/30 mt-1 flex-shrink-0">&bull;</span>
								Teams unwilling to provide required access or assets
							</li>
						</ul>
					</div>
				</div>
			</div>
		</section>

		<!-- HOW ENGAGEMENT WORKS -->
		<section id="pricing" class="container py-16 md:py-24">
			<div class="max-w-3xl mb-12">
				<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">How engagement works</p>
				<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">Two phases: build the foundation, then grow.</h2>
				<p class="text-ink/70">Every engagement starts with a Setup Sprint before monthly care begins.</p>
			</div>

			<!-- Step 1: Setup Sprint -->
			<div class="max-w-5xl mb-16">
				<div class="flex items-center gap-3 mb-6">
					<span class="flex-shrink-0 w-8 h-8 bg-accent text-paper rounded-full flex items-center justify-center text-sm font-bold">1</span>
					<h3 class="text-lg font-semibold text-ink">Setup Sprint <span class="text-sm font-normal text-ink/50">(required)</span></h3>
				</div>
				<div class="bg-paper border-2 border-slate-200 rounded-2xl p-8 shadow-md max-w-3xl">
					<div class="flex flex-wrap items-baseline justify-between gap-4 mb-2">
						<div>
							<h4 class="text-xl font-semibold text-ink">Local SEO Foundation</h4>
							<p class="text-sm text-ink/60">We lay the groundwork before monthly care begins.</p>
						</div>
						<div class="text-right">
							<span class="text-3xl font-bold text-ink">$1,800–$3,000</span>
							<span class="text-ink/60 ml-1">one-time</span>
						</div>
					</div>
					<p class="text-xs text-ink/40 mb-6">2–6 weeks depending on scope</p>

					<ul class="grid grid-cols-1 sm:grid-cols-2 gap-2 text-sm text-ink/70">
						{SETUP_FEATURES.map((f) => (
							<li class="flex items-start">
								<svg class="w-5 h-5 text-accent mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								<span>{f}</span>
							</li>
						))}
					</ul>
				</div>
			</div>

			<!-- Step 2: Monthly Tiers -->
			<div class="max-w-5xl">
				<div class="flex items-center gap-3 mb-6">
					<span class="flex-shrink-0 w-8 h-8 bg-accent text-paper rounded-full flex items-center justify-center text-sm font-bold">2</span>
					<h3 class="text-lg font-semibold text-ink">Monthly Local SEO Care</h3>
				</div>
				<p class="text-ink/70 mb-8 max-w-2xl">Choose the level that matches your growth goals.</p>

				<div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
					{TIERS.map((tier) => (
						<div class={`relative flex flex-col bg-paper border-2 rounded-2xl p-8 shadow-md transition-all duration-300 ${
							tier.popular
								? 'border-accent shadow-xl ring-1 ring-accent/20'
								: 'border-slate-200 hover:shadow-xl hover:border-accent/30 hover:-translate-y-1'
						}`}>
							{tier.popular && (
								<div class="absolute -top-3.5 left-1/2 -translate-x-1/2">
									<span class="inline-block px-4 py-1.5 bg-accent text-paper text-xs font-bold uppercase tracking-wider rounded-full shadow-lg">
										Most Popular
									</span>
								</div>
							)}
							<div class={tier.popular ? 'mt-3' : ''}>
								<p class="text-xs font-medium text-accent uppercase tracking-wider mb-1">{tier.tier}</p>
								<h4 class="text-xl font-semibold mb-1 text-ink">{tier.name}</h4>
								<p class="text-sm text-ink/60 mb-4">{tier.tagline}</p>
								<div class="mb-6 pb-6 border-b border-slate-100">
									<span class="text-3xl font-bold text-ink">{tier.price}</span>
									<span class="text-ink/60 ml-1">{tier.period}</span>
								</div>
								<ul class="flex-1 space-y-3 mb-8 text-sm text-ink/70">
									{tier.features.map((f) => (
										<li class="flex items-start">
											<svg class="w-5 h-5 text-accent mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
											</svg>
											<span>{f}</span>
										</li>
									))}
								</ul>
								<a
									href="#contact"
									class={`mt-auto block text-center px-6 py-3.5 rounded-xl font-semibold no-underline transition-all duration-200 ${
										tier.popular
											? 'bg-accent text-paper shadow-md shadow-accent/30 hover:shadow-xl hover:shadow-accent/50 hover:-translate-y-1'
											: 'bg-slate-50 text-ink border-2 border-slate-200 hover:border-accent/30 hover:bg-paper shadow-sm hover:shadow-md hover:-translate-y-0.5'
									}`}
								>
									Book a Fit Call
								</a>
							</div>
						</div>
					))}
				</div>

				<p class="text-sm text-ink/50 mt-8 max-w-2xl">
					Three-month minimum on monthly care. The setup sprint is required and billed once. We'll recommend the right tier during your fit call.
				</p>
			</div>
		</section>

		<!-- WHAT WE MEASURE -->
		<section class="relative py-16 md:py-24 overflow-hidden" style="background-color: var(--clr-muted);">
			<div class="absolute bottom-0 left-0 w-80 h-80 bg-slate-300/20 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2 pointer-events-none"></div>

			<div class="container relative z-10">
				<div class="max-w-3xl mb-12">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">What we measure</p>
					<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">We report outcomes tied to business impact.</h2>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl">
					<div>
						<h3 class="text-lg font-semibold text-ink mb-4">Primary KPIs</h3>
						<ul class="space-y-3">
							{OUTCOMES.filter(o => o.primary).map((o) => (
								<li class="flex items-start gap-3 bg-paper border-2 border-slate-200 rounded-xl p-4 shadow-sm">
									<svg class="w-5 h-5 text-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
									</svg>
									<span class="text-sm font-medium text-ink">{o.label}</span>
								</li>
							))}
						</ul>
					</div>

					<div>
						<h3 class="text-lg font-semibold text-ink mb-4">Supporting indicators</h3>
						<ul class="space-y-3">
							{OUTCOMES.filter(o => !o.primary).map((o) => (
								<li class="flex items-start gap-3 bg-paper border-2 border-slate-200 rounded-xl p-4 shadow-sm">
									<svg class="w-5 h-5 text-ink/40 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
									</svg>
									<span class="text-sm font-medium text-ink/70">{o.label}</span>
								</li>
							))}
						</ul>
					</div>
				</div>
			</div>
		</section>

		<!-- SCOPE CLARITY -->
		<section class="container py-16 md:py-24">
			<div class="max-w-3xl">
				<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">Scope clarity</p>
				<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">So projects stay clean.</h2>
				<p class="text-ink/70 mb-8">Clear definitions keep work on track and expectations aligned.</p>

				<div class="space-y-4">
					{SCOPE_ITEMS.map((item) => (
						<div class="bg-paper border-2 border-slate-200 rounded-xl p-5 shadow-sm hover:border-slate-300 transition-colors">
							<dt class="font-semibold text-ink mb-1">{item.term}</dt>
							<dd class="text-sm text-ink/70">{item.def}</dd>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- FAQ -->
		<section class="relative py-16 md:py-24 overflow-hidden" style="background-color: var(--clr-muted);">
			<div class="container relative z-10">
				<div class="max-w-3xl mx-auto">
					<p class="text-sm font-medium text-accent uppercase tracking-wider mb-3">FAQ</p>
					<h2 class="text-2xl md:text-3xl font-semibold mb-3 text-ink">Common questions</h2>
					<p class="text-ink/70 mb-8">Straightforward answers. No fine print.</p>

					<div class="space-y-3">
						{FAQS.map((faq) => (
							<details class="bg-paper border-2 border-slate-200 rounded-xl shadow-sm group hover:border-slate-300 transition-colors">
								<summary class="cursor-pointer font-medium text-ink list-none p-5 pr-12 relative">
									{faq.q}
									<svg class="w-5 h-5 text-ink/40 absolute right-5 top-1/2 -translate-y-1/2 transition-transform duration-200 group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
									</svg>
								</summary>
								<div class="px-5 pb-5 -mt-2">
									<p class="text-sm text-ink/70 leading-relaxed">{faq.a}</p>
								</div>
							</details>
						))}
					</div>
				</div>
			</div>
		</section>

		<!-- FINAL CTA -->
		<section id="contact" class="relative py-16 md:py-24 overflow-hidden bg-paper">
			<div class="absolute top-0 left-1/4 w-96 h-96 bg-slate-300/20 rounded-full blur-3xl -translate-y-1/2 pointer-events-none"></div>
